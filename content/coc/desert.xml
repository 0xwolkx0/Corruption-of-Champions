<?xml version="1.0" encoding="utf-8"?>
<extend-zone key="desert" xmlns="xxc-story">
    <encounter name="walk2" chance="100">
        <lib key="ss">
            <scene key="intro">You walk through the shifting sands for an hour, finding nothing.</scene>
            <scene key="str">The effort of struggling with the uncertain footing has made you STRONGEST. </scene>
            <scene key="tou">The effort of struggling with the uncertain footing has made you TOUGHEST. </scene>
        </lib>
        <!-- logic -->
        <display ref="ss/intro"/>
        <if test="rand(2)==0">
            <if test="rand(2)==0 and player.str lt 500">
                <display ref="ss/str"/>
                <dynStats str="100"/>
                <elseif test="player.tou lt 500">
                    <display ref="ss/tou"/>
                    <dynStats tou="100"/>
                </elseif>
            </if>
        </if>
    </encounter>
</extend-zone>